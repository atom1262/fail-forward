<div class="comment">
  <div class="comment-image">
    <img src=<%= comment.user.picture_url %> alt="">
  </div>
  <div class="comment-content">
    <p><%= comment.body %></p>
    <p class="comment-detail"><%= comment.user.formatted_name %> said <%= time_ago_in_words(comment.created_at) %></p>
  </div>
</div>
